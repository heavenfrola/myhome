{{$폼시작}}
<div class="sbs_address">
	<table class="tbl_row">
		<caption>배송지 변경</caption>
		<colgroup>
			<col style="width:25%">
			<col>
		</colgroup>
		<tr>
			<th scope="row">기존 배송지</th>
			<td>{{$기존배송지}}</td>
		</tr>
		<tr>
			<th scope="row">받으시는 분</th>
			<td><input type="text" name="addressee_name" value="{{$받으시는분}}" class="form_input block"></td>
		</tr>
		<tr>
			<th scope="row">전화번호</th>
			<td><input type="text" name="addressee_phone" value="{{$전화번호}}" class="form_input block"></td>
		</tr>
		<tr>
			<th scope="row">휴대전화번호</th>
			<td>
				<input type="text" name="addressee_cell" value="{{$휴대폰}}" class="form_input block">
			</td>
		</tr>
		<tr>
			<th scope="row">주소</th>
			<td class="address_area">
				<label><input type="radio" name="zip_mode" value="1" checked> 지번주소</label>
				<label><input type="radio" name="zip_mode" value="2"> 도로명주소</label>
				<div class="code">
					<input type="text" name="addressee_dong" id="address_dong" class="form_input block" placeholder="읍,면,동,도로명 입력">
