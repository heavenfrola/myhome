.fillter .box {padding:18px 0 20px; border-bottom:1px solid #bebebe;}
.fillter .small ul li {margin-right:7px;}
.fillter .small ul li:nth-child(4n) {margin-right:0;}
.fillter input {display:none;}
.fillter input + label {display:inline-block; background:#F3F3F3; font-weight:500; font-size:14px; line-height:40px; text-align:center;}
.fillter .size_n label {width:61px; height:40px; cursor:pointer;}
.fillter .big li {width:100%;}
.fillter .big label {width:100%; height:40px; cursor:pointer;}
.fillter input:checked + label {background:#000; color:#fff !important;}
.box_btn {margin-top:41px;}
.box_btn a {width:265px; height:45px; padding:12px 0; font-size:14px;}
